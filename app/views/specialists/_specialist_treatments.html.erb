<div>
  <h1>Treatments offered by <%= @specialist.first_name %> <%= @specialist.last_name %></h1>
    <div class="specialist_treatment_grid">
        <div class="specialist_treatment_description">
          <strong>Description</strong>
        </div>
        <div class="specialist_treatment_duration">
          <strong>Duration</strong>
        </div>
        <div class="specialist_treatment_price">
          <strong>Price</strong>
        </div>
        <div class="specialist_treatment_checkbox">
          <strong>Select Treatment</strong>
        </div>
    </div>

    <% @specialist.treatments.each do |treatment| %>
      <div class="specialist_treatment_grid">
        <div class="specialist_treatment_description">
          <%= treatment.description %>
        </div>
        <div class="specialist_treatment_duration">
          <%= treatment.duration %> min
        </div>
        <div class="specialist_treatment_price">
          â‚¬ <%= treatment.price %>
        </div>
        <div class="specialist_treatment_checkbox">
          <a class = 'btn btn-primary' href="<%= specialist_treatment_path(@specialist) %>">Select</a>
        </div>
      </div>
    <% end %>
</div>
